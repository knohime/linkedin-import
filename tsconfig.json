{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["dom", "es2017"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules/**"],
  "include": ["src/**/*.ts"],
  "compileOnSave": false
}
